                @if (ViewBag.result == "1")
                {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.show
                    </div>
                }
                @if (ViewBag.result == "0")
                {
                    <div class="alert alert-warning" role="alert">
                        @ViewBag.show
                    </div>
                }
                <div class="tab-pane active" id="BackLogDetails">
                    @Html.Partial("~/Views/Shared/_Bck_SocietyDetailsForOfficers.cshtml")
                </div>
                <div class="tab-pane" id="ElectionDetails">
                    @Html.Partial("~/Views/Shared/_Bck_ElectionDetails.cshtml")
                </div>
                <div class="tab-pane" id="FormL">
                    @Html.Partial("~/Views/Shared/_Bck_ListandDetailsOfCommitteeMembersForOfficers.cshtml")
                </div>
                <div class="tab-pane" id="ApprovedLForm">
                    @Html.Partial("~/Views/Shared/_Bck_listOfSocietyMembersForOfficers.cshtml")
                </div>
                <div class="tab-pane" id="SharedTransfer">
                    @Html.Partial("~/Views/Shared/_Bck_listOfShareTransferMember.cshtml")
                </div>
                <div class="tab-pane" id="BackLogViewForm">
                    @Html.Partial("~/Views/Shared/_ViewDocsForBackLog.cshtml")
                </div>
            </div>
        </div>
    </div>
</section>
