<section>
    <div class="card-body">
        <div class="card">
            <form class="form form-validate" novalidate="novalidate" action="@Url.Action("Application", "Society")" accept-charset="utf-8" method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="card">
                        <div class="card-body">
                            <div class="col-md-6 form-group">
                                @Html.DropDownList("District", new SelectList(ViewBag.District as System.Collections.IEnumerable, "Value", "Text"),
                                        "Select", new { id = "District", @class = "form-control", required = "required" })
                                <label for="district">1. Select District <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                @Html.DropDownList("ARCSOffice", new SelectList(Enumerable.Empty<SelectListItem>(), "ACRSCode", "ACRSName"),
                                        "Select", new { id = "ARCSOffice", @class = "form-control", required = "required" })
                                <label for="ARCSOffice">2. ARCS Office <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="NameofProposedSociety" name="NameofProposedSociety" required>
                                <label for="NameofProposedSociety">3. Name of Proposed Society <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                @Html.DropDownList("ClassofSocietyandLiability", new SelectList(ViewBag.ClassOfSociety as System.Collections.IEnumerable, "Value", "Text"),
                                        "Select", new { id = "ClassofSocietyandLiability", @class = "form-control", required = "required" })
                                <label for="ClassofSocietyandLiability">4. Class of Society and Liability <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                @Html.DropDownList("SubClassOfSociety", new SelectList(Enumerable.Empty<SelectListItem>(), "SocietySubClassCode", "SocietySubClassName"),
                                        "Select", new { id = "SubClassOfSociety", @class = "form-control", required = "required" })
                                <label for="ARCSOffice">4.1 Sub Class Of Society <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="RegisteredAddress" name="RegisteredAddress" required>
                                <label for="RegisteredAddress">5. Registered Address <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="HouseNoSectorNoRoad" name="HouseNoSectorNoRoad" required>
                                <label for="HouseNoSectorNoRoad">5.1 House No. /Sector No. /Road <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="PostOffice" name="PostOffice" required>
                                <label for="PostOffice">5.2 Post Office <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="PostalCode" name="PostalCode" data-rule-number="true" maxlength="6" pattern="[0-9]{6}" required>
                                <label for="PostalCode">5.3 Postal Code <span style="color:red;"><strong>*</strong></span></label>
                                <p class="help-block">Five digit zip code</p>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="AreaofOperation" name="AreaofOperation" required readonly>
                                <label for="AreaofOperation">6. Area of Operation</label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="Mainobjects1" name="Mainobject1" required>
                                <label for="Mainobjects">7. Main objects <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="Mainobjects2" name="Mainobject2">
                                <label for="Mainobjects1">7.1 Main objects</label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="Mainobjects3" name="Mainobject3">
                                <label for="Mainobjects2">7.2 Main objects</label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="Mainobjects4" name="Mainobject4">
                                <label for="Mainobjects3">7.3 Main objects</label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="Noofmemberspresent" name="Noofmemberspresent" data-rule-number="true" data-rule-range="[1,100]" maxlength="2" required>
                                <label for="Noofmemberspresent">8. No of members at present <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                @Html.DropDownList("Occupation", new SelectList(ViewBag.Occupations as System.Collections.IEnumerable, "Value", "Text"),
                                        "Select", new { id = "Occupation", @class = "form-control", required = "required" })
                                <label for="Occupation">9. Select Occupation <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="Categoryofsociety" name="Categoryofsociety">
                                <label for="Categoryofsociety">10. Category of society (if any)</label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="Estimatedunsecureddebtsofmembers" name="Estimatedunsecureddebtsofmembers">
                                <label for="Estimatedunsecureddebtsofmembers">11. Estimated unsecured debts of members (in case of credit society)</label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="AreaMortgagedbymembers" name="AreaMortgagedbymembers">
                                <label for="AreaMortgagedbymembers">12. Area Mortgaged by members (in case of credit society)</label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="Valueofashare" name="Valueofashare" required>
                                <label for="Valueofashare">13. Value of a share <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="detailsofshares" name="detailsofshares" required>
                                <label for="detailsofshares">14. Capital with details of shares, deposits fee etc. <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" autocomplete="off" class="form-control" id="ModeofPayment" name="ModeofPayment" required>
                                <label for="ModeofPayment">15. Mode of Payment <span style="color:red;"><strong>*</strong></span></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 text-right">
                        <button class="btn btn-primary btn-success" id="Step1" type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
