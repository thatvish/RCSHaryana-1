<section>
    <div class="row">
        <div class="col-lg-12">
            @if (ViewBag.ShowGrid != null)
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table no-margin">
                                <thead>
                                    <tr>
                                        <th>
                                            Serial No.
                                        </th>
                                        <th>
                                            Registration Id
                                        </th>
                                        <th>
                                           Society Name
                                        </th>
                                        <th>
                                            User Name
                                        </th>
                                        <th>
                                            Password
                                        </th>
                                    </tr>
                                </thead>
                                @{int RowNo = 0;
                                    var i = 1;
                                }
                                @foreach (var item in ViewBag.ShowGrid)
                                {

                                    <tbody>
                                        <tr style="padding-top: .8em;padding-bottom: .8em;">
                                            <td>@{RowNo++;} @RowNo</td>
                                            <td>@item.OldRedgNo</td>
                                            <td>@item.SocietyName</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Password</td>
                                            &nbsp; &nbsp;&nbsp;
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div><!--end .table-responsive -->
                    </div><!--end .card-body -->
                </div><!--end .card -->
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <strong>Hi..</strong> No Record Found Yet.
                </div>
            }
        </div>
        @{
            if (ViewBag.ShowGrid != null)
            {
                if (ViewBag.TotalCount != 0)
                {
                    <div class="col-md-12">
                            <a href="@Url.Action("Report", "ARCS",new {id= "PDF",value="BackLogCredential"})" class="btn btn-primary btn-lg btn-block" target="_blank">Print & Download</a>
                    </div>
                }
                else
                {
                    <div class="col-md-12 form-group" style="text-align:center">                      
                   <label style="text-align:center;font-size:medium" for="Records"> No Records Found</label>
                    </div>

                }
            }
        }
    </div>
</section>